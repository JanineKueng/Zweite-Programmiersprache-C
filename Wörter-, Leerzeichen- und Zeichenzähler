#include <stdio.h>
#include<conio.h>

int Woerter()
{
    char s[1000];
    int count = 0, i;
    scanf("%[^\n]s", s);
    for (i = 0;s[i] != '\0';i++)
    {
        if (s[i] == ' ')
            count++;    
    }
    printf("Anzahl WÃ¶rter: %d\n", count + 1);
}

int Buchstaben()
{
    char s[1000];
    int count=0, i;
    printf("Bitte einen Satz eingeben: \n");
    scanf("%[^\n]s", s);
    for (i=0;s[i] != '\0';i++);
    printf("Anzahl Zeichen (inkl. Leer- und Satzzeichen): %d\n", i);
    return 0;
}

int Leerzeichen()
{
    char s[1000];
    int count=0, i;
    
    for(i=0;s[i];i++)
    {
        if(s[i]== ' ')
            count++;
    }
    printf("Anzahl Leerzeichen: %d",count);
}

int main()
{
    Buchstaben();
    Woerter();
    Leerzeichen();
}
